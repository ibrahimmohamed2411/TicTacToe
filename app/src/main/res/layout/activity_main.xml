                    android:layout_marginEnd="10dp" />

                <Button
                    android:id="@+id/button9"
                    style="@style/my"
                    android:layout_width="100dp"

                    android:layout_height="190dp"
                    android:layout_weight="1" />
            </TableRow>

        </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>